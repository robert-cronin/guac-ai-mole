{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/server/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "OPENAI_ENDPOINT": "${input:openaiEndpoint}",
        "OPENAI_API_KEY": "${input:openaiApiKey}",
        "OPENAI_PROVIDER": "azure"
      }
    }
  ],
  "inputs": [
    {
      "id": "openaiEndpoint",
      "type": "promptString",
      "description": "Enter your OpenAI endpoint",
      "password": false
    },
    {
      "id": "openaiApiKey",
      "type": "promptString",
      "description": "Enter your OpenAI API key",
      "password": true
    }
  ]
}
